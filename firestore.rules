rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    // This allows both anonymous and signed-in users, which matches 
    // your app's use of firebase.auth().signInAnonymously()
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for 'cases' collection
    match /cases/{caseId} {
      allow read, write: if isAuthenticated();
    }

    // Rules for 'promotions' collection (uploads)
    match /promotions/{promoId} {
      allow read, write: if isAuthenticated();
    }

    // Rules for 'tasks' collection (dashboard tasks)
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // Detailed Default Rule: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
